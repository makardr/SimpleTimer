<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="74dp"
            android:layout_marginBottom="109dp"
            android:text="Start" />

        <Button
            android:id="@+id/btnStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="49dp"
            android:layout_marginBottom="108dp"
            android:layout_toEndOf="@+id/btnStart"
            android:text="Stop" />

        <EditText
            android:id="@+id/tvInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnStart"
            android:layout_alignParentStart="true"
            android:layout_marginStart="79dp"
            android:layout_marginBottom="66dp"
            android:ems="10"
            android:inputType="text"
            android:text="0" />

        <Button
            android:id="@+id/btnAddTimer"
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvInput"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="170dp"
            android:text="Add timer" />

        <EditText
            android:id="@+id/tiTimerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tiTime"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="196dp"
            android:layout_marginBottom="30dp"
            android:ems="10"
            android:inputType="text"
            android:text="Timer name" />

        <EditText
            android:id="@+id/tiTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btnAddTimer"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="193dp"
            android:layout_marginBottom="64dp"
            android:ems="10"
            android:inputType="text"
            android:text="Time in ms" />
    </RelativeLayout>

</layout>